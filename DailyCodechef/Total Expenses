#include <iostream>
#include<iomanip>
using namespace std;

int main() {
	// your code goes here
	
	int t;
	cin >> t;
	while(t--)
	{
	    double q, p;
	    cin >> q >> p;
	    if(q <= 1000)
	        cout << fixed << setprecision(6) << (q * p) << endl;
	        
	    else if(q > 1000)
	        cout << fixed << setprecision(6) << (90*(q*p)/100) << endl;
	    
	}
	return 0;
}
