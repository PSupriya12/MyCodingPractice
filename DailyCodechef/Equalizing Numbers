#include <iostream>
using namespace std;

int main() {
	// your code goes here
	
	int t;
	cin >> t;
	while(t--)
	{
	    int a, b;
	    cin >> a >> b;
	    if(a == b)
	        cout << "Yes\n";
	        
	    else if(a > b && (a-b) == 1)
	    {
	        cout << "No\n";
	    }
	    else if(a > b && (a-b)%2 == 1)
	        cout << "No\n";
	    
	    else if(b > a && (b-a) == 1)
	        cout << "No\n";
	        
	    else if(b > a && (b-a)% 2 == 1)
	        cout << "No\n";
	        
	    else
	        cout << "Yes\n";
	}
	return 0;
}
