#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t,n,k,ans;
	cin>>t;
	while(t--)
	{
	    cin>>n>>k;
	    if(k>n)
	        ans = n ;
	    else if(k==n)
	        ans = 0;
	    else if(k==0)
	        ans = n;
	    else if(k<n)
	    {
	       ans = n - ((n/k)*k);
	    }
	    cout<<ans<<"\n";
	}
	return 0;
}
