#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t,x,y,z,ans;
	cin>>t;
	while(t--)
	{
	    cin>>x>>y>>z;
	    if(x<=3)
	        ans = x*y;
	    else if(x%3==0)
	        ans = (x*y)+(((x/3)-1)*z);
	    else
	        ans = (x*y)+((x/3)*z);
	    cout<<ans<<endl;
	}
	return 0;
}
