#include <iostream>
using namespace std;

int main() {
	// your code goes here
	
	int t;
	cin >> t;
	while(t--)
	{
	    int a, b, c;
	    cin >> a >> b >> c;
	    int ans;
	    if(a<=b && a<=c)
	        ans = b + c;
	        
	    else if(b<=a && b<=c)
	        ans = a + c;
	        
	    else
	        ans = a + b;
	        
	    cout << ans << endl;
	}
	return 0;
}
