#include <iostream>
using namespace std;

int main() {
	// your code goes here
	
	int t;
	cin >> t;
	while(t--)
	{
	    int n, k, x, y;
	    cin >> n >> k >> x >> y;
	    int cost ;
	    if(x > y)
	    {
	        cost = (k*x) + ((n - k)* y);
	    }
	    else
	    {
	        cost = n * x;
	    }
	    cout << cost << endl;
	}
	return 0;
}
