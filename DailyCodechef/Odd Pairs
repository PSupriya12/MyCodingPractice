#include <iostream>
using namespace std;

int main() {
	// your code goes here
	
	int t;
	cin >> t;
	while(t--)
	{
	    long long int n;
	    cin >> n;
	    if(n % 2 == 0)
	    {
	        cout << (2*(n*n)/4) << endl;
	    }
	    
	    else
	    {
	        cout << 2*(((n/2)+1)*(n/2)) << endl;
	    }
	    
	}
	return 0;
}
